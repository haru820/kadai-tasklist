<%= form_with(model: task, local: true) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'Task Detail' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'Task status' %>
  <%= f.text_field :status %>
  
  <%= f.submit 'UP' %>
<% end %>