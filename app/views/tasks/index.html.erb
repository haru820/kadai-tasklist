<h1>This is TASK LIST!!</h1>

<% if @tasks.any? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>id</th>
        <th>Task</th>
        <th>status</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task_path(task.id) %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to 'New Task Registration', new_task_path, class: "btn btn-primary" %>


<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Task List</h1>
    <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>

